@model MvcApplication.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>用戶登錄</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div>
        用戶名：
        </div>  
        <div>
            @Html.TextBoxFor(model => model.UserName)
        </div>      
        <div>
            密碼：
        </div>
        <div>
            @Html.PasswordFor(model => model.Password)
        </div>
        <div>
            <input type="submit" value="登錄"/>
        </div>
    }

</body>
</html>
